<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>


        <main class="login">
            <div class="container login-detail">
                <% if(errorMessage){ %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label for="user" class=" font-italic ml-2">Tên đăng nhập </label>
                                <input type="text" class="form-control" placeholder="" name="user"
                                    value="<%= oldInput.user %> ">
                            </div>
                            <div class="form-group">
                                <label for="password" class=" font-italic ml-2">Mật khẩu</label>
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <input type="password" class="form-control" placeholder="" name="password"
                                    value="<%= oldInput.password%>">
                            </div>
                            <button class="btn btn_info" type="submit">Đăng nhập</button>
                        </form>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>